#!/usr/bin/make -f

export PYBUILD_NAME={{charm}}
export PYBUILD_DISABLE_python2=1
export PYBUILD_INSTALL_DIR=usr/share/{{charm}}/
export PYBUILD_INSTALL_ARGS_python3=--install-lib=usr/share/{{charm}}/ \
	--install-data=usr/ \
	--root=$(CURDIR)/debian/{{charm}}/ \
	--no-compile -O0

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_python3:
	dh_python3 --ignore-shebangs
override_dh_installinit:
	dh_installinit --no-start

override_dh_auto_test:
	@echo "No tests."
